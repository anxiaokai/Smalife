<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@color/tabbg"
    android:elevation="4dp"
    >
<ImageView
    android:id="@+id/recycler_item_image"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:src="@drawable/google_image"
    />
    <TextView
        android:id="@+id/recycler_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金泰你总统哈哈哈哈访问伊拉克！"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/recycler_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哪里看好厉害ilhlhlhllhl经历了礼拜礼拜六ilblblblbilibl宾利宾利宾利啵啵啵~!"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/recycler_item_resource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新华网"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/recycler_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4分钟前"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
</LinearLayout>