<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="googleplay.xiaokai.com.managelife.SettingActivity">

        <shem.com.materiallogin.MaterialLoginView
            android:visibility="gone"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:loginTitle="登陆"
            app:loginHint="用户名"
            app:loginPasswordHint="密码"
            app:registerTitle="注册"
            app:registerHint="用户名"
            app:registerPasswordHint="密码"
            app:registerRepeatPasswordHint="确认密码"
            app:registerActionText="下一步"
            app:loginActionText="登陆"
            />

        <LinearLayout
            android:id="@+id/setting"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:background="@color/listback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp">
                                        <TextView
                                            android:id="@+id/head"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="头像"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerInParent="true"
                                            android:textSize="18sp"
                                            android:textColor="@color/balck"
                                            android:layout_marginLeft="10dp"
                                            />
                                        <de.hdodenhof.circleimageview.CircleImageView
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/profile_image"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:src="@drawable/direction"
                                            app:civ_border_width="2dp"
                                            app:civ_border_color="@color/listback"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerInParent="true"
                                            android:layout_marginRight="10dp"
                                            />
                                </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/progressbar"
                            />
                                <RelativeLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp">
                                        <TextView
                                            android:id="@+id/username"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="用户名"
                                            android:textSize="18sp"
                                            android:textColor="@color/balck"
                                            android:layout_centerInParent="true"
                                            android:layout_alignParentLeft="true"
                                            android:layout_marginLeft="10dp"
                                            />
                                        <TextView
                                            android:id="@+id/name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerInParent="true"
                                            android:textSize="16sp"
                                            android:layout_marginRight="10dp"
                                            />
                                </RelativeLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/progressbar"
                                    />
                                <RelativeLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp">
                                        <TextView
                                            android:id="@+id/sign"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="个性签名"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerInParent="true"
                                            android:textSize="18sp"
                                            android:textColor="@color/balck"
                                            android:layout_marginLeft="10dp"
                                            />
                                        <TextView
                                            android:id="@+id/signcontent"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerInParent="true"
                                            android:textSize="16sp"
                                            android:text="点击设置签名"
                                            android:layout_marginRight="10dp"
                                            />
                                </RelativeLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/progressbar"
                                    />
                                <RelativeLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp">
                                        <TextView
                                            android:id="@+id/blog"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="博客地址"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerInParent="true"
                                            android:textSize="18sp"
                                            android:textColor="@color/balck"
                                            android:layout_marginLeft="10dp"
                                            />
                                        <TextView
                                            android:id="@+id/blogcontent"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerInParent="true"
                                            android:textSize="16sp"
                                            android:text="设置博客地址"
                                            android:layout_marginRight="10dp"
                                            />
                                </RelativeLayout>
                        </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:stateListAnimator="@anim/item_raise"
                    android:clickable="true"
                    app:cardElevation="4dp"
                    >
                        <Button
                            android:id="@+id/signout"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/listback"
                            android:text="退出登录"
                            android:textColor="@color/red"
                            />
                </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/selectmenu"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <Button
                    android:text="拍照"
                    android:background="@color/listback"
                    android:id="@+id/but1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/balck"
                    android:layout_width="100dp"
                        android:layout_height="1dp"
                    />
                <Button
                    android:text="相册"
                    android:id="@+id/but2"
                    android:background="@color/listback"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
        </LinearLayout>

</FrameLayout>
</LinearLayout>